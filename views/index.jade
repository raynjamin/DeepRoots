extends ./layout.jade

block content
  .container
    .row
      .box
        .col-lg-12.text-center
          #carousel-example-generic.carousel.slide
            // Indicators
            ol.carousel-indicators.hidden-xs
              li.active(data-target='#carousel-example-generic', data-slide-to='0')
              li(data-target='#carousel-example-generic', data-slide-to='1')
              li(data-target='#carousel-example-generic', data-slide-to='2')
            // Wrapper for slides
            .carousel-inner
              .item.active
                img.img-responsive.img-full(src='img/samples/1.jpg', alt='')
              .item
                img.img-responsive.img-full(src='img/samples/2.jpg', alt='')
              .item
                img.img-responsive.img-full(src='img/samples/3.jpg', alt='')
            // Controls
            a.left.carousel-control(href='#carousel-example-generic', data-slide='prev')
              span.icon-prev
            a.right.carousel-control(href='#carousel-example-generic', data-slide='next')
              span.icon-next
          h2.brand-before
            small Welcome to
          h1.brand-name Deep Roots Carolinas
          hr.tagline-divider
    .row
      .box
        .col-lg-12
          hr
          h2.intro-text.text-center About Our
            strong  Company
          hr
          img.img-responsive.img-border.img-left.img-max-width(src='img/billy_magnolia.jpg', alt='')
          hr.visible-xs
          p
            | Deep Roots Carolinas is a landscaping firm located in the heart of historic downtown Mooresville, NC. We specialize in mowing, trimming, light
            | flower bed maintenance, and small repairs.
          p
            | We are a small, local company that is dedicated to serving our clients. This is a picture of Billy, the primary owner 
            | and operator of Deep Roots Carolinas, with his newborn daughter. He's not a businessman or a CEO. He's not a faceless
            | suite living 1000 miles away. He's your neighbor.
          p
            | Core to our business model is honesty and quality, and we believe our work speaks for itself.
    .row
      include ./partials/form.jade
